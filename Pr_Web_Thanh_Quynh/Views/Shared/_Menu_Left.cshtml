@using Pr_Web_Thanh_Quynh.Models
@{ 
    ProductDBContext dBContext = new ProductDBContext();
    List<Category> Listcategories = dBContext.Categories.ToList();
}
<div class="col-sm-3">
    <div class="left-sidebar">
        <h2>Category</h2>
        <div class="panel-group category-products" id="accordian">
            <!--category-productsr-->
            @foreach (var item in Listcategories)
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-title"><h5>@Html.ActionLink(item.CatName, "Index", "Product", new { categoryId = item.Id }, null)</h5></div>
                    </div>
                </div>
            }
        </div><!--/category-products-->
        <div class="shipping text-center">
            <!--shipping-->
            <img src="~/Content/images/home/shipping.jpg" alt="" />
        </div><!--/shipping-->

    </div>
</div>
